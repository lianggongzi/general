<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rela1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/steelblue" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/return_button"
                android:layout_width="60dip"
                android:layout_height="fill_parent"
                android:background="@color/steelblue" >

                <LinearLayout
                    android:layout_width="50dip"
                    android:layout_height="30dip"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" >

                    <RelativeLayout
                        android:layout_width="20dip"
                        android:layout_height="fill_parent" >

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="10dip"
                            android:layout_height="15dip"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ppt_toolbar_previous_v_small" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="30dip"
                        android:layout_height="fill_parent" >

                        <ImageView
                            android:layout_width="28dip"
                            android:layout_height="28dip"
                            android:layout_centerVertical="true"
                            android:background="@drawable/folder" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4.0sp" >

                    <TextView
                        android:id="@+id/pathname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/imagelinear"
                    android:layout_width="40dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" >

                    <ImageButton
                        android:id="@+id/imagebuttonx"
                        android:layout_width="28dip"
                        android:layout_height="28dip"
                        android:layout_centerVertical="true"
                        android:background="@drawable/writer_hand_write_close" />
                </LinearLayout>

                
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <GridView
        android:id="@+id/filelist"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rela1"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:background="@color/global_background"
        android:drawSelectorOnTop="false"
        android:listSelector="@drawable/et_title_bar_ok_hi"
        android:numColumns="1"
        android:paddingLeft="0.0dip"
        android:paddingRight="0.0dip"
        android:paddingTop="0.0dip"
        android:verticalSpacing="0.0dip" />

</RelativeLayout>